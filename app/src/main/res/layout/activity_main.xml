<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">




    <ImageView
        android:id="@+id/image1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/blank"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"


        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/call"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.131"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>



    <TextView
        android:id="@+id/Login"
        android:layout_marginTop="280dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/FontTitle"
        android:textColor="#6C93AB"
        android:textAlignment="center"
        android:fontFamily="@font/nuevastdbold"
        android:textSize="50sp"
        android:textStyle="bold"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/User"
        android:layout_marginTop="380dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/LoginUser"
        android:textColor="#6C93AB"
        android:layout_marginLeft="40dp"
        android:fontFamily="@font/nuevastdbold"
        android:textSize="30sp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/USERNAMEEDIT"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="30dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:inputType="textPersonName"
        android:fontFamily="@font/nuevastdbold"
        android:hint="ENTER NAME"
        android:backgroundTint="#000000"

        />

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/Password"
        android:layout_marginTop="460dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/LoginPassword"
        android:textColor="#6C93AB"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/nuevastdbold"
        android:textSize="30sp"
        android:textStyle="bold"
        />

        <EditText
            android:id="@+id/PasswordEdit"
            android:inputType="textPassword"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="460dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:fontFamily="@font/nuevastdbold"
            android:textAlignment="center"
            android:textSize="20dp"
            android:hint="ENTER PASSWORD"
            android:backgroundTint="#000000"

            />

    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/Forget"
        android:layout_marginTop="510dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/LoginWRITE"
        android:textColor="#6C93AB"
        android:layout_marginLeft="195dp"
        android:fontFamily="@font/nuevastdbold"
        android:textSize="15sp"
        android:textStyle="bold"
        />

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:ignore="MissingConstraints">

        <Button

            android:background="@drawable/signin"
            android:id="@+id/SigninButton"
            android:layout_marginTop="560dp"
            android:layout_marginLeft="150dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nuevastdbold"
            android:text="@string/SignInButton"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:textStyle="bold"




            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/message"
        android:layout_marginTop="630dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Message1"
        android:textColor="#6C93AB"
        android:layout_marginLeft="30dp"
        android:fontFamily="@font/nuevastdbold"
        android:textSize="20sp"
        android:textStyle="bold"


        />


    <TextView
        android:id="@+id/register"
        android:layout_marginTop="630dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Message2"
        android:clickable="true"
        android:textColor="@color/colorPrimary"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/nuevastdbold"
        android:textSize="25sp"
        android:textStyle="bold"


        />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>


