<?xml version="1.0" encoding="utf-8"?>

   <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_console"
    android:weightSum="2"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".Home2"
    android:id="@+id/text_home"
    >

<LinearLayout
    android:layout_marginTop="300dp"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_gravity="center"
    android:layout_weight="1"
    android:orientation="horizontal">


    <androidx.cardview.widget.CardView
        android:id="@+id/HospitalCardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:clickable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/HospitalImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_margin="27dp"
                android:background="@drawable/hospital" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/PoliceStationCardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:clickable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/PoliceStationImage"
                android:layout_width="138dp"
                android:layout_height="123dp"
                android:layout_gravity="center"
                android:layout_margin="22dp"
                android:background="@drawable/policestation"
                />


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>

<LinearLayout
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_gravity="center"
    android:layout_weight="1"
    android:clipToPadding="false"
    android:orientation="horizontal">


    <androidx.cardview.widget.CardView
        android:id="@+id/FireServiceCardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:clickable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/FireServiceImage"
                android:layout_width="118dp"
                android:layout_height="103dp"
                android:layout_gravity="center"
                android:layout_margin="27dp"
                android:background="@drawable/fireservice"
                />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/AmbulanceCardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:clickable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/AmbulanceImage"
                android:layout_width="118dp"
                android:layout_height="103dp"
                android:layout_gravity="center"
                android:layout_margin="27dp"
                android:background="@drawable/ambulance"
                />


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>


</LinearLayout>

