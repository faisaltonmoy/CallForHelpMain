<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp"
        tools:context=".MapsActivity" />

    <EditText
        android:id="@+id/Edit_search_id"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:inputType="text"
        android:backgroundTint="#000000"
        android:hint="Search a Place"
        android:textSize="20sp" />


    <ImageView
        android:id="@+id/search_button_id"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="10dp"
        android:onClick="onClick"
        android:src="@drawable/search_btn" />


    <ImageView
        android:id="@+id/google"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="388dp"
        android:layout_marginTop="10dp"
        android:onClick="onClick"
        android:src="@drawable/google" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/search"
        android:layout_marginTop="685dp"
        android:layout_marginBottom="50dp"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:clickable="true"
        />

</RelativeLayout>








