<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="-2dp"
    android:layout_marginLeft="-1dp"
    android:layout_marginRight="-1dp"
    tools:context=".registration">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/registration"
        android:orientation="vertical"
        tools:context=".registration">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="380dp"
            android:padding="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fullnameid"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nuevastdbold"
                android:text="Full Name:"
                android:textAlignment="center"
                android:textColor="@color/header"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/name_id"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/nuevastdbold"
                android:inputType="textPersonName"
                android:hint="Enter Full Name"
                android:textAlignment="center"
                android:textSize="18sp" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/emailid_id"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nuevastdbold"
                android:text="Email Id:"
                android:textAlignment="center"
                android:textColor="@color/header"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/emailid"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/nuevastdbold"
                android:hint="Enter Valid Email Id"
                android:inputType="textEmailAddress"
                android:textAlignment="center"
                android:textSize="18sp" />




        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/phoneno_id"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nuevastdbold"
                android:text="Phone No:"
                android:textAlignment="center"
                android:textColor="@color/header"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/phoneid"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/nuevastdbold"
                android:hint="Enter Valid Phone No"
                android:inputType="phone"
                android:textAlignment="center"
                android:textSize="18sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/date_id"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nuevastdbold"
                android:text="Day of Birth:"
                android:textAlignment="center"
                android:textColor="@color/header"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/dob_id"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:editable="false"
                android:clickable="true"
                android:fontFamily="@font/nuevastdbold"
                android:hint="Day/Month/Year"
                android:textAlignment="center"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bloodgrp_id"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nuevastdbold"
                android:text="Blood Group:"
                android:textAlignment="center"
                android:textColor="@color/header"
                android:textSize="15sp" />

            <Spinner
                android:id="@+id/spin_id"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginLeft="50dp"
                android:textAlignment="center">

            </Spinner>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/userid_id"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nuevastdbold"
                android:text="User Id:"
                android:textAlignment="center"
                android:textColor="@color/header"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/userid"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/nuevastdbold"
                android:hint="Enter User Id"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textSize="18sp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/password_id"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nuevastdbold"
                android:text="Password:"
                android:textAlignment="center"
                android:textColor="@color/header"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/passid"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/nuevastdbold"
                android:hint="At least 8 Character"
                android:inputType="textPassword"
                android:textAlignment="center"
                android:textSize="18sp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/cpassword_id"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="-8dp"
                android:fontFamily="@font/nuevastdbold"
                android:text="Confirm Password:"
                android:textAlignment="center"
                android:textColor="@color/header"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/cpassid"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/nuevastdbold"
                android:hint="Re-type"
                android:inputType="textPassword"
                android:textAlignment="center"
                android:textSize="18sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="30dp"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/signup_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/signbutton"
                android:fontFamily="@font/nuevastdbold"
                android:gravity="center"
                android:text="Sign Up"
                android:textColor="@color/white"
                android:textSize="25sp" />

        </LinearLayout>


    </LinearLayout>



</ScrollView>
