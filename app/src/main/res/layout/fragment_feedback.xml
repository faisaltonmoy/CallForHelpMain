<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="-2dp"
    android:layout_marginLeft="-1dp"
    android:layout_marginRight="-1dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/feedback_console">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:gravity="center"
        android:text="Give your feedback or suggestions"
        android:textSize="25sp"
        android:fontFamily="@font/nuevastdbold"
        android:textColor="@color/header"
        />

    <EditText
        android:id="@+id/feedback_id"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:inputType="textMultiLine"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="65dp"
        android:gravity="center_vertical"
        android:hint="Write your feedback here....."
        android:padding="15dp"
        android:layout_gravity="top"
        android:textSize="20sp"
        />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Rate:"
            android:textColor="@color/header"
            android:fontFamily="@font/nuevastdbold"
            android:textSize="25sp"/>

        <Spinner
            android:id="@+id/rate_id"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:textAlignment="center">

        </Spinner>


    </LinearLayout>

    <Button
        android:id="@+id/submit_btn_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:background="@drawable/signbutton"
        android:fontFamily="@font/nuevastdbold"
        android:text="Submit"
        android:textColor="@color/white"
        android:textSize="25sp" />


</LinearLayout>